<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<!--context-param>
		<param-name>punksearch_home</param-name>
		<param-value>/opt/punksearch</param-value>
	</context-param-->
	<context-param>
		<param-name>admin_password</param-name>
		<param-value>123_456</param-value>
	</context-param>

	<jsp-config>
		<taglib>
			<taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
			<taglib-location>/WEB-INF/c.tld</taglib-location>
		</taglib>
	</jsp-config>

	<welcome-file-list>
		<welcome-file>search.jsp</welcome-file>
	</welcome-file-list>

	<filter>
		<filter-name>AuthFilter</filter-name>
		<filter-class>org.punksearch.web.AuthFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/admin.jsp</url-pattern>
	</filter-mapping>
	<error-page>
		<error-code>401</error-code>
		<location>/login.jsp</location>
	</error-page>

    <!--
       - This is useful because current browsers typically do not
       - set a character encoding even if specified in the HTML page or form
       see: http://wiki.apache.org/tomcat/FAQ/CharacterEncoding
    -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.punksearch.web.web.filters.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

	<servlet>
		<servlet-name>InitServlet</servlet-name>
		<servlet-class>org.punksearch.web.InitServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>ChartViewerServlet</servlet-name>
		<servlet-class>org.punksearch.web.chart.ChartViewer</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ChartViewerServlet</servlet-name>
		<url-pattern>/chart/*</url-pattern>
	</servlet-mapping>

</web-app>
